.all_content{
  margin-top:20rpx;
  margin-left:16rpx;
}
/* 用户信息 */
.userInfo{
  display: inline-block;
}
.userAvater{
  width: 82rpx;
  height: 82rpx;
  float: left;
}
.username{
  font-size: 30rpx;
  display:inline-block;
  margin-left:10rpx;
  margin-right:10rpx;
}
.userSex{
  width: 28rpx;
  height: 28rpx;
  position:relative;
  top:3rpx;
}
.feedback{
  width: 570rpx;
  height: 406rpx;
  background-color: white;
  border-radius: 20rpx;
  position:relative;
  top:-23rpx;
  left:105rpx;
}
.feedback::before{
  position: absolute;
  left: -16px;
  top: 10px;
  content: '';
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 8px solid transparent;
  border-right:8px solid #ffffff;
}
.textview{
  width:520rpx;
  font-size:28rpx;
  padding-left:10px;
  padding-top:10px;
}
.textNum{
  font-size: 28rpx;
  color: black;
  float:right;
  margin-right:20rpx;
}
.commit{
  width:100%;
  height: 111rpx;
  position: fixed;
  bottom:0;
  background: white;
  font-size:24rpx;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
  text-align: center;
}
.commit image{
  padding-top:18rpx;
  width: 44rpx;
  height: 44rpx;
}
.commit text{
  margin-top:5rpx;
  color: #7F7F7F;
  display:block;
}
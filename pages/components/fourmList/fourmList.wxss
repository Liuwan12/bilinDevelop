/* 加载动画 */
.toLoading{
  width: 100%;
  height: 30rpx;
  margin-top: 10rpx;
}
.toLoading image{
  display: block;
  width: 45rpx;
  height: 45rpx;
  margin: 0 auto;
  animation: loading 2s infinite linear;
}
@keyframes loading{
	from{transform: rotate(720deg);}
	to{transform: rotate(0deg);}
}

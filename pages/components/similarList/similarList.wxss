/* 相似推荐 */
.headline{
  text-align: center;
  font-size: 24rpx;
  color: rgb(147, 147, 147);
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
.similar_con{
  padding-top:15rpx;
  padding-bottom:10rpx;
}
.sim_info .price{
  font-size: 30rpx;
  color: #ff2828;
  margin-left: 20rpx;
}
.info_bottom{
  margin-left: 20rpx;
  overflow: hidden;
  margin-top: 10rpx;
  height: 45rpx;
}
.sim_info .aaa{
  font-size: 24rpx;
  color: #63cdb0;
  display:inline-block;
  margin-left:20rpx;
}
.sim_info .sim_location{
  font-size: 26rpx;
  color: #6b6b6b;
  display: inline-block;
  max-width:270rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.sim_touxiang{
  width: 82rpx;
  height: 82rpx;
  float: left;
  margin-left: 16rpx;
}
.sim_touxiang image{
  width: 100%;
  height: 100%;
}
.sim_nickName{
  float: left;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.sim_usersex{
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.sim_usersex image{
  width: 100%;
  height: 100%;
  margin-bottom: 6rpx;
}
/*  标签  */
.wrapper_class{
  display:inline-block;
  height: 35rpx;
}
.sim_appointent{
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 32rpx;
  border-radius: 6rpx;
  background-color: #F8F8F8;
  padding-left: 16rpx;
  padding-right: 16rpx;
  line-height: 32rpx;
  float: left;
  margin-top: 2rpx;
}
.sim_title{
  font-size:30rpx;
  color:#333333;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display: inline-block;
  padding-left: 20rpx;
  width: 450rpx;
  padding-top: 10rpx;
  font-weight: 700;
}
.sim_content{
  margin-left:120rpx;
  background:#ffffff;
  width:540rpx;
  position:relative;
  border-radius:20rpx;
  height:180rpx;
  border:2rpx solid #e4e4e4;

}
.sim_content::before{
    position: absolute;
    left: -20px;
    top: 16px;
    content: '';
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 10px solid transparent;
    border-right:10px solid #ffffff;
}
.orange{
  background: #fa9e3b;
}
.orange::before{
    position: absolute;
    left: -20px;
    top: 16px;
    content: '';
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 10px solid transparent;
    border-right:10px solid #fa9e3b;
}

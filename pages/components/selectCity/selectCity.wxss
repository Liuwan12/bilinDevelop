/* components/selectCity.wxss */
.hide{
 display: none;
}
.show{ 
 display: block;
}
page{
  height: 100%;
}
.place_holder{
  color: #ddd;
}
.search_box{
  
}
.search_input{
  height: 80rpx;
  line-height:80rpx;
  position:relative;
  box-shadow:0 0 2px #B8B8B8;
}
.search_input input{
  display: inline-block;
  height:80rpx;
  width:90%;
  font-size:30rpx;
  padding-left:25rpx;
}
.search_cancel{
  display: inline-block;
  position:absolute;
  right:15rpx;
  font-size:30rpx;
  color:#999;
}
.search_city{

}
.search_city_text{
  display:block;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1px solid #ddd;
  font-size:30rpx;
  padding-left:20rpx;
}
.city_box{
  height:100%;
  background: #fff;
  display: flex;
}
.city_left{
  width: 90%;
  height: 100%;
  flex: 1;
  padding-top:20rpx;
  background:#efefef;
}
.city_list{
  box-shadow:0px 2px 2px #ddd; 
  background:#fff;

}
.city_right{
  width: 60rpx;
  height: 100%;
  position: fixed;
  top: 100rpx;
  right: 50rpx;
  /* display: flex; */
  flex-direction: column;
  justify-content: middle;
}
.letter_item{
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #000;
  text-align: center;
  margin:2rpx 0;
}
.city_locate,.national{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}
.city_locate{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
}
.city_locate_title{
  color: #999;
  margin-right: 20rpx;
}
.city_locate .btnlocate{
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  color:#FCB61F;
  border:0rpx solid #FCB61F;
  background-color: #fff;
  display: inline-block;
  margin:15rpx 0;
}
.new_city{
  background: #fff;
  font-size: 28rpx;
}

.serviceTop{
  background-color: rgb(247, 247, 247);
  padding-left: 30rpx;
  height: 155rpx;
}
.service_txt{
  font-size: 36rpx;
  padding-top: 30rpx;
  padding-bottom: 16rpx;
}
.service_date{
  font-size: 32rpx;
}
.options{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 1rpx solid rgb(242, 242, 242);
}
.option{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(204,204,204);
  display: inline-block;
  margin-right: 18rpx;
  margin-left: 30rpx;
}
.hasoption{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: red;
  display: inline-block;
  margin-right: 18rpx;
  margin-left: 30rpx;
}
.opt_text{
  font-size: 28rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.detail{
  font-size: 24rpx;
  width: 72rpx;
  height: 43rpx;
  text-align: center;
  line-height: 43rpx;
  float: right;
  margin-right: 30rpx;
  color: rgb(255, 81, 81);
  border: 1rpx solid rgb(255, 81, 81);
  margin-top: 30rpx;
}
.pay{
  width: 566rpx;
  height: 84rpx;
  color: #ffffff;
  background-color: rgb(255, 81, 81);
  font-size: 40rpx;
  margin: 0 auto;
  line-height: 84rpx;
  text-align: center;
  margin-top: 30rpx;
}
/* 支付失败 */
.payfailed{
  width: 630rpx;
  height: 300rpx;
  position: fixed;
  background: #ffffff;
  border: 1rpx solid red;
  text-align:center;
  line-height:100rpx;
  padding-top:25px;
  margin-left: 60rpx;
  top: 400rpx;
  border-radius: 20rpx;
}
.cuowu{
  width: 30rpx;
  height: 30rpx;
  position:absolute;
  top:20rpx;
  right:30rpx;
}
.payagain{
  background:#ff5555;
  color:#ffffff;
  display:inline-block;
  padding:10rpx;
  height:50rpx;
  line-height:50rpx;
  border-radius:20rpx;
  margin-top:40rpx;
}
/* 支付成功 */
.paySuccess{
  width: 630rpx;
  height: 300rpx;
  position: fixed;
  background: #ffffff;
  border: 1rpx solid red;
  text-align:center;
  margin-left: 60rpx;
  top: 400rpx;
  border-radius: 20rpx;
}
.suc_text{
  padding: 35rpx;
  font-size: 34rpx;
}
.suc_button{
  background:#ff5555;
  color:#ffffff;
  display:inline-block;
  height:50rpx;
  line-height:50rpx;
  border-radius:20rpx;
  margin-top:40rpx;
  width: 200rpx;
}
/* 单选按钮 */
.list_item{
  display: inline-block;
  margin-top:10rpx;
  margin-left:20rpx;
}
.item{
  width: 28rpx;
  height: 28rpx;
  border: 2px solid #2b2b2b;
  border-radius: 50%;
  display: inline-block;
}
.itemvalue{
  position:relative;
  top:-6rpx;
  margin-left:5px;
  margin-right:10rpx;
}
.itemselect{
  width:10px;
  height:10px;
  background-color:rgb(144,144,144);
  border-radius:50%;
  position:relative;
  top:5rpx;
  left:5rpx;
}

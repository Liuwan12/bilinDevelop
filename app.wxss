/**app.wxss**/
page{
  background: #ebebeb;
}
.menu_box{
 display: flex;
 height: 100rpx;
 border-bottom: solid 1rpx #e9e9e9;
 line-height: 100rpx;
}
.menu1{
 font-size:30rpx;
 height: 75rpx;
 width: 80rpx;
 padding-bottom: 8rpx;
}
.menu_content{
  flex-grow:1;
  text-align:center;
}
/* 广告 */
.adunit{
  margin-top: 20rpx;
  width: 623rpx;
  border: 10rpx solid #ffffff;
  position: relative;
  margin: 0 auto;
  border-radius:18rpx;
}
.adunit::before{
  position: absolute;
  left: 6px;
  top: -24px;
  content: '';
  border-top: 10px solid transparent;
  border-bottom: 10px solid #ffffff;
  border-left: 10px solid transparent;
  border-right:10px solid transparent;
  z-index: 2;
}
.adtitle{
  display:inline-block;
  font-size:28rpx;
  margin-left:20rpx;
  position:relative;
  top:-48rpx;
  color:#BBBABA;
}
.adimage{
  width:82rpx;
  height:82rpx;
  padding-left: 16rpx;
  margin-bottom: 20rpx;
}
.adavater{
  width: 28rpx;
  height: 28rpx;
  margin-left:10rpx;
  position:relative;
  top:-45rpx;
}
/* 气泡 */
.sanjiao{
  margin-left:103rpx;
  background:#ffffff;
  width:540rpx;
  position:relative;
  border-radius:20rpx;
  display: block;
  border: 2rpx solid #e4e4e4;
  top: -5rpx;
}
.sanjiao::before{
  position: absolute;
  left: -15px;
  top: 14px;
  content: '';
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 8px solid transparent;
  border-right:8px solid #ffffff;
}
/* 橘色三角 */
.orange{
  background: #fa9e3b;
}
.orange:before{
  position: absolute;
  left: -15px;
  top: 14px;
  content: '';
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 8px solid transparent;
  border-right:8px solid #fa9e3b;
}
/* 详情中间白底及三角 */
